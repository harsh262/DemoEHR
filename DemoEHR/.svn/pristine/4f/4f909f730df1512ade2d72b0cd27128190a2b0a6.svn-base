		var URI = "http://54.84.170.46:5100/ehr/cpoe/"+orderId+"/cancelOrder";
		var promise = $http.get(URI)
		.then(function(response){
			console.log(response.data.result);
			if(response.data._status_Code === 200){
				return (response.data.result);
			}
