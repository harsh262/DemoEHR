		var URI = "http://54.84.170.46:5100/ehr/cpoe/"+orderId+"/updateOrder";
		console.log(commonObj.toString());
		var promise = $http.put(URI, JSON.stringify(commonObj)).then(function(response) {
					console.log(response);
					return response;
				},
				function() {
					alert("error");
				})
				return promise;
	}
	
