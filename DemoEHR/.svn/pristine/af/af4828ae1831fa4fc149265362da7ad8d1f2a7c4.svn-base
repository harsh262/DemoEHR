<html>
<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	 <link rel="stylesheet" href="css/medical-icons/wfmi-style.css">
	 <link rel="stylesheet" href="css/param.common.master.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
 <style>
 .modal-button-div{
 margin-top: 3px;
    margin-left: -55px;
 }
 iframe {
    border-width: 0px !important;
    border-style: inset;
    border-color: initial;
    border-image: initial;
}
 </style>
</head>
<body>
	<div><i class="fa fa-window-restore fa-2x" aria-hidden="true" data-toggle="modal" data-target="#crisisNote" ></i></div>
	
	 <!--Start Modal Crisis Note -->
		  <div class="modal fade" id="crisisNote" role="dialog">
		    <div class="modal-dialog ">
		    
		      <!-- Modal content-->
		      <div class="modal-content panel-bg-color">
		        <div class="modal-header">
		          <div class="modal-title patient-detail-row" style="font-size:16px; font-weight:700;padding:8px; margin-bottom:0px;">Crisis Note
		           <button type="button" class="close" data-dismiss="modal">&times;</button>
		          </div>
		        </div>
		        <div class="modal-body">
		          <div class="container">
		          	<div class="row">
		          		<div class="col-md-12">
			          		<div class="col-md-3">
			          			<div class="form-inline">
				          			<div class="form-group">
								      <label for="Title">Title</label>
								      <input class="form-control" id="Title" type="text">
								    </div>
							    </div>
			          		</div>
			          		<div class="col-md-2">
			          		<div class="modal-button-div">
			          			<div class="btn-group">
								    <button type="button" data-value="1" id="comments" class="btn btn-default"><i class="fa fa-comments" aria-hidden="true"></i></button>
								    <button type="button" data-value="2" id="camera" class="btn btn-default"><i class="fa fa-camera" aria-hidden="true"></i></button>
								    <button type="button" data-value="3" id="img_preview" class="btn btn-default"><i class="fa fa-camera-retro" aria-hidden="true"></i></button>
								    <button type="button" data-value="4" id="microphone" class="btn btn-default" data-toggle="modal" data-target="#speak_now" ><i class="fa fa-microphone" aria-hidden="true"></i></button>
								</div>
		          			</div>
		          		 </div>
		          		</div>
		          	</div>
		          	<div class="row">
		          		
		          </div>
		          
		          <div class="row" id="comments_row" style="display:none">
		          	<div class="col-md-12">
			          	<div class="form-group text-center">
						      <label for="" >Comment:</label>
						      <textarea class="form-control" rows="5" id=""></textarea>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="float_right">
									<button type="button" id="" class="btn btn-primary">Save</button>
								</div>
							</div>
						</div>
					</div>
		          </div>
		          				
		          <div class="row" id="camera_row" style="display:none">
		          		<div class="form-group text-center">
						      <label>Camera</label>
						</div>
		          </div>
		          
				  <div class="row" id="img_preview_row" style="display:none">
				  	<div class="row">
				  		<div class="col-md-12">
				  			<iframe src="upload-images/upload.html" width="76%" max-width="76%" height="400" seamless></iframe>
				  		</div>
				  	</div>
				  </div>
		          
		        </div>
		  
		      </div>
		      
		    </div>
		  </div>
		  </div>  
	  <!-- End Modal Crisis Note  -->
	  
	  <!-- Modal Speaknow Model -->
		  <div class="modal fade" id="speak_now" role="dialog">
		    <div class="modal-dialog ">
		      <div class="modal-content panel-bg-color">
		        <div class="modal-header">
		          <div class="modal-title patient-detail-row" style="font-size:16px; font-weight:700;padding:8px; margin-bottom:0px;">Speak now
		           <button type="button" class="close" data-dismiss="modal">&times;</button>
		          </div>
		        </div>
		        <div class="modal-body">
		          <div class="">
		          	<div class="">
		          		<div class="">
			          		 <iframe src="speak_now/speak_now.html" max-width="100%" width="100%" height="435" seamless></iframe>
		          		</div>
		          	</div>
		          </div>
		        </div>
		      </div>
		    </div>
		  </div>
	  <!-- End Modal Speaknow  -->
	  
<script type="text/javascript" src="js/bootstrap.min.js"></script>
<script>
$(document).ready(function(){
    $("#comments").click(function(){
        $("#comments_row").toggle();
        $("#camera_row").hide();
        $("#img_preview_row").hide();
    });
    $("#camera").click(function(){
        $("#camera_row").toggle();
        $("#comments_row").hide();
        $("#img_preview_row").hide();
    });
    
    $("#img_preview").click(function(){
        $("#img_preview_row").toggle();
        $("#camera_row").hide();
        $("#comments_row").hide();
    });
    
    $("#microphone").click(function(){
        $("#microphone_row").toggle();
    });
    
    /* $( document ).on( "pageinit", function() {    	 	     
        $( "#microphone_row" ).on({
            popupbeforeposition: function( event, ui ) {  
                console.log( event.target );
            }
        });
    });
     */
    
   
});
</script>
</body>
</html>